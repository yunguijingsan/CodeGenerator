package com.benniu.egen.controller;

import java.io.File;
import java.io.FileOutputStream;
import java.io.OutputStreamWriter;
import java.io.Writer;
import java.nio.charset.Charset;
import java.util.HashMap;
import java.util.Map;

import com.benniu.egen.entity.CodeParams;

import freemarker.template.Configuration;
import freemarker.template.Template;
import freemarker.template.TemplateExceptionHandler;

public class ServiceCODE {

	public static void generateServiceImpl(CodeParams params){
		try {
			//创建配置实例
			Configuration cfg = new Configuration(Configuration.getVersion());
			//指定模板文件的来源
			cfg.setDirectoryForTemplateLoading(new File(params.getServicePackage()));
			//设置编码格式
			cfg.setDefaultEncoding("UTF-8");
			//异常
			cfg.setTemplateExceptionHandler(TemplateExceptionHandler.RETHROW_HANDLER);
			cfg.setLogTemplateExceptions(false);
			//参数配置
			Map<String, Object> root = new HashMap<String, Object>();
			Template temp = cfg.getTemplate("ServiceImpl.ftl");
			root.put("params", params);
			//指定文件位置
			Writer out = new OutputStreamWriter(new FileOutputStream(params.getServiceAbsolutePath()+params.getServiceBasePath()+"/"+params.getProjectName().toLowerCase()+"/impl/"+params.getEntityName()+"ServiceImpl.java"),Charset.forName("UTF-8"));
			temp.process(root, out);
		} catch (Exception e) {
			e.printStackTrace();
		}
	}
	
	public static void generateService(CodeParams params){
		try {
			//创建配置实例
			Configuration cfg = new Configuration(Configuration.getVersion());
			//指定模板文件的来源
			cfg.setDirectoryForTemplateLoading(new File(params.getServicePackage()));
			//设置编码格式
			cfg.setDefaultEncoding("UTF-8");
			//异常
			cfg.setTemplateExceptionHandler(TemplateExceptionHandler.RETHROW_HANDLER);
			cfg.setLogTemplateExceptions(false);
			//参数配置
			Map<String, Object> root = new HashMap<String, Object>();
			Template temp = cfg.getTemplate("Service.ftl");
			root.put("params", params);
			 Writer out = new OutputStreamWriter(new FileOutputStream(params.getServiceAbsolutePath()+params.getServiceBasePath()+"/"+params.getProjectName().toLowerCase()+"/"+params.getEntityName()+"Service.java"),Charset.forName("UTF-8"));
			 temp.process(root, out);
		} catch (Exception e) {
			e.printStackTrace();
		}
	}
}
